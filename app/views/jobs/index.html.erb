All Jobs for <strong><%= @company.name %></strong>

<% @jobs.each do |job| %>
  <ul><%= link_to job.title, company_job_path(@company, job) %> at <%= job.company.name %>
  <%= link_to "Edit", edit_company_job_path(@company, job) %>
  <%= link_to "Delete",company_job_path(@company, job), method: :delete %>
 </ul>
<% end %>

<h4>Current Contacts associated with <%= @company.name %></h4>
<% @company.contacts.each do |contact| %>
Name:<li><%= contact.full_name %> </li>
Position:<li><%= contact.position %> </li>
Email:<li><%= contact.email %> </li>
<% end %>

<h4><%= link_to "Create New Job", new_company_job_path %></h4>
<h3>Create a new Contact</h3>
<%= render partial: "/contacts/form" %>
